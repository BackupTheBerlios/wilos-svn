<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
	
	<joined-subclass name="wilos.model.misc.wilosuser.Participant"
		extends="wilos.model.misc.wilosuser.WilosUser" table="participant">
		<key column="participant_id"></key>

		<set name="rolesListForAProject" table="play" lazy="true">
			<key column="participant_id"></key>
			<many-to-many class="wilos.model.spem2.role.RoleDescriptor"
				column="roledescriptor_id">
			</many-to-many>
		</set>
		
		<set name="affectedProjectList" table="affectedto" lazy="true">
			<key column="participant_id"></key>
			<many-to-many class="wilos.model.misc.project.Project"
				column="name">
			</many-to-many>
		</set>
	</joined-subclass>
	
</hibernate-mapping>

