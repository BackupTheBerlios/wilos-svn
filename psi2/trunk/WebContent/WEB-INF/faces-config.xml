<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
	<!--   Spring Variable resolver -->
	<application>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
		<locale-config />
	</application>
	
	<managed-bean>
		<managed-bean-name>ActivityViewer</managed-bean-name>
		<managed-bean-class>woops2.presentation.activity.ActivityViewer</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>activityManager</property-name>
			<value>#{ActivityManager}</value>
		</managed-property>
	</managed-bean>
	<!--       PSI2  -->
	<managed-bean>
		<managed-bean-name>ParticipantViewer</managed-bean-name>
		<managed-bean-class>woops2.presentation.participant.ParticipantViewer</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>participantService</property-name>
			<value>#{ParticipantService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>ProcessManagerViewer</managed-bean-name>
		<managed-bean-class>woops2.presentation.wilosuser.ProcessManagerViewer</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>processManagerService</property-name>
			<value>#{ProcessManagerService}</value>
		</managed-property>
	</managed-bean>
	
	<validator>
		<validator-id>emailValidator</validator-id>
		<validator-class>
			woops2.presentation.validators.EmailValidator
		</validator-class>
	</validator>
	
	<validator>
		<validator-id>equalValidator</validator-id>
		<validator-class>
			woops2.presentation.validators.EqualValidator
		</validator-class>
	</validator>
	
	  <!-- PSI2  -->
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>createactivity</from-outcome>
			<to-view-id>/activityform.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>activity</from-outcome>
			<to-view-id>/activity.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!--       PSI2  -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>createParticipant</from-outcome>
			<to-view-id>/participantSubscribe.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>participant_logging</from-outcome>
			<to-view-id>/participant_logging.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>affect_role</from-outcome>
			<to-view-id>/affect_role.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!--       PSI2  -->
</faces-config>
