<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
	
	<joined-subclass name="woops2.model.wilosuser.Participant"
		extends="woops2.model.wilosuser.WilosUser" table="participant">
		<key column="participant_id"></key>

		<set name="rolesListForAProject" table="play" lazy="true">
			<key column="participant_id"></key>
			<many-to-many class="woops2.model.role.RoleDescriptor"
				column="roledescriptor_id">
			</many-to-many>
		</set>
	</joined-subclass>
	
</hibernate-mapping>

