<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<joined-subclass
		name="wilos.model.spem2.guide.Guidance"
		extends="wilos.model.spem2.element.Element"
		table="guidance" lazy="true">
		<key column="guidance_id"></key>
		
		<property name="type" type="java.lang.String" column="type"
			length="256" />
			
		<property name="presentationName" type="java.lang.String" column="presentationname"
			length="256" />

		<!-- Associations -->
		<many-to-one name="taskdefinition" class="wilos.model.spem2.task.TaskDefinition"
			column="taskdefinition_id" lazy="false">
		</many-to-one>
		
		<many-to-one name="roledefinition" class="wilos.model.spem2.role.RoleDefinition"
			column="roledefinition_id" lazy="false">
		</many-to-one>

		<many-to-one name="activity" class="wilos.model.spem2.activity.Activity"
			column="activity_id" lazy="false">
		</many-to-one>

		
		
	</joined-subclass>
</hibernate-mapping>
