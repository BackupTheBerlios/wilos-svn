<!-- Script for building jar application (without lib)-->
<project name="Woops2 Core Services Jar Builder (no libs)" default="build.jar" basedir="../">

	<!-- Configure the context path for this application -->
	<property name="project.name" value="Spelp-core-services" />
	<property name="build.dir" value="${basedir}/tmp" />
	<property name="src.dir" value="${basedir}/src" />
	<property name="src.java.dir" value="${src.dir}" />
	<property name="lib.dir" value="${basedir}/WebContent/WEB-INF/lib" />
	<property name="dist.dir" value="${basedir}/dist" />

	<path id="classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>
	
	<!-- Taches webservices -->
	<taskdef name="apt" classname="com.sun.tools.ws.ant.Apt">
		<classpath refid="classpath" />  
	</taskdef>

	<!-- Gestion de l'application -->
	<target name="clean" depends="clean_dist">
		<delete dir="${build.dir}" />
	</target>

	<target name="clean_dist">
		<delete dir="${dist.dir}" />
	</target>

	<target name="prepare" depends="clean" description="Create build directories.">
		<mkdir dir="${build.dir}/${project.name}" />
		<mkdir dir="${build.dir}/${project.name}/lib" />
		<mkdir dir="${dist.dir}" />
	</target>

	<!-- Executable Targets -->
	<target name="build" depends="prepare" description="Compile Java files and copy static files.">
		<javac srcdir="${src.java.dir}" destdir="${build.dir}/${project.name}/">
			<include name="**/*.java" />
			<include name="**/*.xml" />
			<classpath refid="classpath" />
		</javac>
		
		<!-- Generation des webservices -->
		<mkdir dir="${build.dir}/tmp" />
		
		<apt
		   debug="${debug}"
		   verbose="${verbose}"
		   destdir="${build.dir}/${project.name}/"
		   sourcedestdir="${build.dir}/tmp"
		   sourcepath="${src.java.dir}">
		   <classpath refid="classpath" /> 
		   <source dir="${src.java.dir}">		  
		      <include name="**/webservices/*.java"/>
		   </source>			
		</apt>
		
		<delete dir="${build.dir}/tmp" />	
		<!-- Fin Generation des webservices -->
	
		<copy todir="${build.dir}/${project.name}/">
			<fileset dir="${src.java.dir}">
				<include name="**/*.xml" />
				<include name="**/*.tld" />
				<include name="**/*.properties" />
			</fileset>
		</copy>
	</target>

	<!-- JAR Building -->
	<target name="build.jar" depends="build">
		<delete dir="${dist.dir}" />
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar">
			<fileset dir="${build.dir}/${project.name}/">
				<include name="**/*.*" />
			</fileset>
		</jar>
		<delete dir="${build.dir}" />
	</target>

</project>

