<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
	<joined-subclass name="woops2.model.task.TaskDescriptor"
		extends="woops2.model.workbreakdownelement.WorkBreakdownElement"
		table="taskdescriptor" lazy="true">
		<key column="taskdescriptor_id"></key>

		<many-to-one name="taskDefinition" class="woops2.model.task.TaskDefinition"
			column="taskdefinition_id">
		</many-to-one>
		
		<many-to-one name="mainRole" class="woops2.model.role.RoleDescriptor"
			column="roledescriptor_id">
		</many-to-one>
		
		<set name="additionalRoles" table="perform" lazy="true">
			<key column="taskdescriptor_id"></key>
			<many-to-many class="woops2.model.role.RoleDescriptor"
				column="roledescriptor_id">
			</many-to-many>
		</set>
		
	</joined-subclass>
</hibernate-mapping>